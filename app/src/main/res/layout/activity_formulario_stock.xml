<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".actividades.FormularioStockActivity">

    <ScrollView

            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresar Stock de Fruta o Verdura"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionFS"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="100dp"
                    android:padding="8dp"
                    android:layout_marginRight="30dp"/>


            <Spinner
                    android:id="@+id/spinnerListaFS"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginRight="30dp"
                    android:padding="8dp"/>


            <EditText
                    android:id="@+id/ediTxtLibrasFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaFS"
                    android:layout_marginTop="10dp"
                    android:hint="Libras"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtBultosFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasFS"
                    android:layout_marginTop="1dp"
                    android:hint="Bultos"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtFechaRegistroFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtBultosFS"
                    android:hint="Fecha de Registro"
                    android:layout_marginLeft="20dp"/>
            <Button
                    android:id="@+id/btnRegistrarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:layout_below="@+id/ediTxtFechaRegistroFS"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="40dp"
                    android:paddingEnd="15dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:layout_below="@+id/ediTxtFechaRegistroFS"
                    android:layout_marginTop="100dp"
                    android:paddingVertical="2dp"
                    android:layout_marginLeft="230dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/molde_btn_varios_background"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>