<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".actividades.FormularioProveedorActivity">


    <ScrollView

            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/relatiLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar Proveedor"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>


            <EditText
                    android:id="@+id/ediTxtNombreP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:hint="Nombre"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtTelefonoP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtNombreP"
                    android:hint="Telefono"
                    android:layout_marginLeft="20dp"/>
            <Spinner
                    android:id="@+id/spinnerCiudadP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtTelefonoP"
                    android:layout_marginTop="0dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>

            <EditText
                    android:id="@+id/ediTxtFechaRegistroFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerCiudadP"
                    android:hint="Fecha Registro"
                    android:layout_marginLeft="20dp"/>


            <Button
                    android:id="@+id/btnRegistrarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Registrar  "
                    android:layout_below="@+id/ediTxtFechaRegistroFS"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtFechaRegistroFS"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="230dp"
                    android:text="  Cancelar  "
                    android:background="@drawable/molde_btn_varios_background"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>