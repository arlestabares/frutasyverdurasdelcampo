<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".editarFormularios.EditarCompraActivity">


    <ScrollView

            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/relatiLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Registro  de Frutas o Verduras"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="130dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>
            <Spinner
                    android:id="@+id/spinnerListaEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:scrollbarSize="30dp"
                    android:layout_marginTop="200dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>
            <EditText
                    android:id="@+id/ediTxtPrecioLibraEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaEC"
                    android:layout_marginTop="40dp"
                    android:hint="Precio Libra"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtLibrasEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtPrecioLibraEC"
                    android:hint="Libras"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtBultosEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasEC"
                    android:layout_marginTop="20dp"
                    android:hint="Bultos"
                    android:layout_marginLeft="20dp"/>
            <Spinner
                    android:id="@+id/spinnerProcedenciaEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ediTxtBultosEC"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="20dp"/>
            <EditText
                    android:id="@+id/ediTxtFechaRegistroEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha Registro"
                    android:layout_below="@+id/spinnerProcedenciaEC"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:layout_marginLeft="20dp"/>
            <Button
                    android:id="@+id/btnEditarRegistroEC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtFechaRegistroEC"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:text="  Registrar  "
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarRegistroEC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtFechaRegistroEC"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="50dp"
                    android:text="  Cancelar  "
                    android:background="@drawable/molde_btn_varios_background"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>