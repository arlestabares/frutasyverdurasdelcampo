<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editarFormularios.EditarDescomposicionActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Fruta o Verdura en Descomposion"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionED"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp">

            </Spinner>

            <Spinner
                    android:id="@+id/spinnerListaED"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/spinnerOpcionED"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp">

            </Spinner>


            <EditText
                    android:id="@+id/ediTxtLibrasED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaED"
                    android:layout_marginTop="30dp"
                    android:hint="Libras"
                    android:layout_marginLeft="20dp"/>

            <EditText
                    android:id="@+id/ediTxtBultosED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasED"
                    android:layout_marginTop="1dp"
                    android:hint="Bultos"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtFechaRegistroED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtBultosED"
                    android:hint="Fecha de Registro"
                    android:layout_marginLeft="20dp"/>
            <Button
                    android:id="@+id/btnEditarED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtFechaRegistroED"
                    android:layout_marginTop="50dp"
                    android:text="  Registrar  "
                    android:layout_marginLeft="40dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Cancelar  "
                    android:layout_marginLeft="230dp"
                    android:layout_below="@+id/ediTxtFechaRegistroED"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/molde_btn_varios_background"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>