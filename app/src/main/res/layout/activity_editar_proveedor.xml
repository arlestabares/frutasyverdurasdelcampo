<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editarFormularios.EditarProveedorActivity">
    <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Proveedor"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"/>
    <ScrollView
            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/relatiLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/ediTxtNombreEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:hint="Nombre"
                    android:layout_marginLeft="20dp"/>
            <Spinner
                    android:id="@+id/spinnerCiudadEP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ediTxtNombreEP"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtTelefonoEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerCiudadEP"
                    android:hint="Telefono"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtFechaRegistroEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtTelefonoEP"
                    android:layout_marginTop="1dp"
                    android:hint="Fecha Registro"
                    android:layout_marginLeft="20dp"/>
            <Button
                    android:id="@+id/btnEditarProveedorEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtFechaRegistroEP"
                    android:layout_marginTop="150dp"
                    android:text="Registrar"
                   android:layout_marginLeft="50dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar "
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="150dp"
                    android:layout_below="@+id/ediTxtFechaRegistroEP"
                    android:background="@drawable/molde_btn_varios_background"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>